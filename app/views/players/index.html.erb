<% @players.each do |player| %>

  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
        <div class="players">
          <h4><%= player.name %></h4>
          <p><%= player.position %></p>
          <li><%= player.age %></li>
          <li><%= player.squad_no %></li>
          <li><%= player.quote %></li>
        </div>
      </div>
    </div>
  </div>

<% end %>
